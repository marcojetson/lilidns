<%= '<div class="alert alert-warning">' + @error + '</div>' if defined?(@error) %>
<form class="form-update" method="post">
	<div class="form-group">
		<label>Token</label>
		<input class="form-control" name="token" type="password" value="<%= h params['token'] %>">
	</div>
	<div class="form-group">
		<label>IP</label>
		<input class="form-control" name="ip" type="text" value="<%= h params['ip'] || request.ip %>">
	</div>
	<button type="submit" class="btn btn-primary">Update</button>
	<a class="btn btn-unpretentious" href="/add">...or create a new host</a>
</form>