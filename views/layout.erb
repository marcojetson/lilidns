<!doctype html>
<html>
	<head>
		<title><%= defined?(@title) ? @title : settings.name %></title>
		<link rel="stylesheet" href="/static/css/bootstrap.min.css">
		<link rel="stylesheet" href="/static/css/theme.css">
		<link rel="stylesheet" href="/static/css/notification.css">
	</head>
	<body>
		<div class="container">
			<div class="wrapper">
				<header class="header">
					<a class="brand" href="/"><%= settings.name %></a>
					<p class="lead"><%= settings.title %></p>
				</header>
				<% flash.each do |category, message| %>.
	     			<div class="alert alert-<%= category %>"><%= message %></div>
				<% end %>
				<%= yield %>
			</div>
		</div>
		<a class="fork-me" href="https://github.com/marcojetson/lilidns">
			<img alt="Fork me on GitHub" src="https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png">
		</a>
		<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
		<script src="/static/js/ZeroClipboard.min.js"></script>
		<script src="/static/js/jquery.notification.js"></script>
		<script src="/static/js/app.js"></script>
	</body>
</html>